<div class="container py-3">
  <h1 class="mb-4 text-center">{{title}}</h1>

  <div class="mb-3 d-flex gap-2 justify-content-center">
    <a href="/kafs?mode=students" class="btn btn-outline-primary">К списку классов</a>
    <a href="/kafs?mode=teachers" class="btn btn-outline-primary">К списку кафедр</a>
  </div>

  {{#if members.length}}
    <div class="row g-3">
      {{#each members}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <button
            class="btn w-100 status text-start py-2 {{#if status}}btn-success{{else}}btn-danger{{/if}}"
            data-user="{{id}}"
            data-status="{{status}}">

            <div class="fw-semibold">{{name}}</div>
            <div class="small opacity-75">{{subtitle}}</div>
          </button>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-warning text-center">Нет данных.</div>
  {{/if}}
</div>

